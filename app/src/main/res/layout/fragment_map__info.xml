<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/valorantDark"
    tools:context=".Map_Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backButtonMapInfo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/valorantRed"
                android:src="@drawable/back"
                android:tint="@color/valorantWhite" />

            <TextView
                android:id="@+id/mapName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="45sp"
                android:autoSizeMinTextSize="17dp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/valorant"
                android:gravity="center"
                android:maxLines="1"
                android:text="Map Name"
                android:textAlignment="gravity"
                android:textColor="@color/valorantRed"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>
        <ImageView
            android:id="@+id/mapPicture"
            android:layout_width="match_parent"
            android:maxHeight="600dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/bindmapmine"
             />
    </LinearLayout>
</ScrollView>
